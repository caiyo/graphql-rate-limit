{
  "name": "graphql-rate-limit",
  "description": "Basic rate-limiting middleware for GraphQL. Use to limit repeated requests to queries and/or mutations.",
  "version": "0.1.0",
  "homepage": "https://github.com/ravangen/graphql-rate-limit#readme",
  "author": "Rob Van Gennip <ravangen@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravangen/graphql-rate-limit.git"
  },
  "bugs": {
    "url": "https://github.com/ravangen/graphql-rate-limit/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -d",
    "lint": "yarn tsc; yarn lint:fmt; yarn lint:ts",
    "lint:fmt": "prettier --write 'src/**/*.ts'",
    "lint:ts": "tslint --project tsconfig.json --fix --config tslint.json 'src/**/*.ts'",
    "ci:lint:fmt": "prettier --list-different 'src/**/*.ts'",
    "ci:lint:ts": "tslint --project tsconfig.json --config tslint.json 'src/**/*.ts'",
    "test": "jest"
  },
  "keywords": [
    "graphql",
    "graphql-js",
    "middleware",
    "schema",
    "resolvers",
    "rate",
    "limit",
    "ratelimit",
    "rate-limit",
    "cost",
    "security"
  ],
  "dependencies": {
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.0"
  },
  "devDependencies": {
    "@types/graphql": "14.0.3",
    "@types/jest": "23.3.10",
    "@types/node": "10.12.18",
    "jest": "23.6.0",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.2.2"
  }
}
